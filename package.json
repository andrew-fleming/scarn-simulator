{
  "name": "scarn-simulator",
  "version": "0.0.1-alpha",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "lint": "eslint . --ext .ts,.js --ignore-pattern eslint.config.js",
    "lint:fix": "eslint . --ext .ts,.js --fix --ignore-pattern eslint.config.js",
    "prepublishOnly": "npm run clean && npm run build && npm run test:run"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "c8": "^8.0.0",
    "eslint": "^9.34.0",
    "eslint-plugin-jsdoc": "^54.1.1",
    "eslint-plugin-vitest": "^0.5.4",
    "typescript-eslint": "^7.5.0",
    "typedoc": "^0.28.11",
    "typescript": "^5.2.2",
    "vitest": "^3.1.3",
    "@types/node": "^22",
    "@midnight-ntwrk/ledger": "^4.0.0",
    "@midnight-ntwrk/zswap": "^4.0.0"
  },
  "peerDependencies": {
    "@midnight-ntwrk/compact-runtime": "^0.8.1"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "pnpm": ">=8.0.0"
  }
}
